#! /bin/bash

case "$1" in 
"") 
  echo "Usage: ${0##*/} { inernal-only | external-home | external-office }"
  ;;
internal)
  xrandr --output eDP1 --auto --output DP1  --off --output HDMI1 --off
  ;;
external-home)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 2560x1440
  ;;
external-office)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1920x1080
  ;;
*)
  echo "Parameter value $1 is not supported"
  echo "Usage: ${0##*/} { inernal-only | external-home | external-office }"
  ;;
esac


