#! /bin/bash

case "$1" in 
"") 
  echo "Usage: ${0##*/} {inernal | external-right | external-normal}"
  ;;
internal)
  xrandr --output eDP1 --auto --output HDMI1 --off
  ;;
external-normal)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1920x1080
  ;;
external-right)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate right --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate right --mode 1600x1200
  ;;
*)
  echo "Parameter value $1 is not supported"
  echo "Usage: ${0##*/} { inernal-only | external-right | external-normal }"
  ;;
esac


