#! /bin/bash

case "$1" in 
"") 
  echo "Usage: ${0##*/} { inernal-only | external-home | external-office }"
  ;;
internal)
  xrandr --output eDP1 --auto --output DP1  --off --output DP2 --off --output HDMI1 --off
  ;;
external-home)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 2560x1440
  ;;
external-office)
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1280x1024
  xrandr --output eDP1 --off  --output HDMI1 --auto --rotate normal --mode 1920x1080
  ;;
sj-office)
  xrandr --output eDP1 --off  --output DP2 --auto --rotate normal --mode 1920x1080
  ;;
side-by-side)
  xrandr  --output eDP1 --left-of DP2 --output DP2 --auto
  ;;
mirror)
  xrandr  --output eDP1 --auto --same-as DP2   --output DP2 --auto
  ;;
*)
  echo "Parameter value $1 is not supported"
  echo "Usage: ${0##*/} { inernal-only | external-home | external-office }"
  ;;
esac


